<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".steps.SimplexResultFragment">


    <TextView
        android:id="@+id/simplex_result_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_lines"
        android:paddingBottom="5dp"
        android:text="@string/simplex_solution"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/simplex_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/simplex_result_header">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>